<table class="table table-condensed">
  <% for comment in @comments %>
    <tr><td><%= comment.name %>&nbsp;&nbsp;&nbsp;&nbsp;<%= comment.created_at.strftime("%d-%m-%Y %H:%M") %>    <br/> <%= comment.comment %></td></tr>
  <% end %>
</table>


<%= form_for(Comment.new, :remote => true) do |f| %>
  <%= f.hidden_field :movie_id,:value=>@movie_id%>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment,:rows=>"3" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Comment" %>
  </div>
<% end %>
